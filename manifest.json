{
  "manifest_version": 2,
  "name": "HipChat File Links",
  "description": "",
  "version": "0.2",

  "icons": {
    "16": "img/icon128.png",
    "48": "img/icon128.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": "img/icon128.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "permanent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*.hipchat.com/*"],
      "js": [
        "js/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
  ]
}
